<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#706fd3"
    tools:context=".SeriesList">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="183dp"
        app:srcCompat="@drawable/baymax"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-10dp"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <Button
            android:id="@+id/go_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            android:text="Name :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="75dp"
            android:text="Genre :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="110dp"
            android:text="Language :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="150dp"
            android:text="Time :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/var_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="40dp"
            android:text="Big Hero 6"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/var_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="75dp"
            android:text="Animation,Comedy,Drama"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/var_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="110dp"
            android:text="English"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/var_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="150dp"
            android:text="1h 42m"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/GhostWhite"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="The film tells the story of Hiro Hamada, a young robotics prodigy, and Baymax, his late brother Tadashi's healthcare provider robot, who form a superhero team to combat a masked villain who is responsible for Tadashi's death."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/finishStatus"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/WhiteSmoke"
        android:textSize="20dp" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_below="@id/finishStatus"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:text="Not Watched"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/White"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@id/finishStatus"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="8dp"
        android:text="Watched"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/finishStatus"
        android:layout_centerInParent="true"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</RelativeLayout>